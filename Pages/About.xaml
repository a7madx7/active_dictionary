<UserControl x:Class="Active_Dictionary.Pages.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">

    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="Tab"
                       SelectedSource="/Pages/aboutKhaterah.xaml">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="Khaterah"
                          Source="/Pages/aboutKhaterah.xaml" />
                <mui:Link DisplayName="Presentation"
                          Source="/Pages/present.xaml" />
                <mui:Link DisplayName="The Developer"
                          Source="/Pages/aboutDev.xaml" />
                <mui:Link DisplayName="version info"
                          Source="/Pages/version.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>